class Viper(cmd.Cmd):
    #Command example
    
    def do_greet(self, person):
        if person:
            print('hi',person)
        else:
            print('hi')
            
    def do_list(self, fuck):
	    fuck = os.getcwd()
	    print(fuck)
		
    def do_dirchange(self, mow):
        fuck = os.getcwd()
        print(fuck)
        mow = input('Which directory?')
        os.chdir(mow)
        print('Directory changed.')
	    
